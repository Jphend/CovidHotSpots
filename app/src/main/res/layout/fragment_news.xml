<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.news.NewsFragment">

    <Button
            android:text="Visit Article"
            android:layout_width="379dp"
            android:layout_height="35dp"
            android:id="@+id/details3"
            android:background="#431F63"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/newsTitle3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/date3"
            tools:layout_editor_absoluteX="0dp"/>
    <TextView
            android:id="@+id/date3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/details3"/>
    <Button
            android:text="Visit Article"
            android:layout_width="379dp"
            android:layout_height="35dp"
            android:id="@+id/details1"
            android:background="#431F63"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="450dp" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/details1"/>
    <TextView
            android:id="@+id/newsTitle1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/date1"
            tools:layout_editor_absoluteX="0dp"/>
    <Button
            android:text="Visit Article"
            android:layout_width="379dp"
            android:layout_height="35dp"
            android:id="@+id/details2"
            android:background="#431F63"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="240dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/date2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/details2"/>
    <TextView
            android:id="@+id/newsTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/date2"
            tools:layout_editor_absoluteX="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>